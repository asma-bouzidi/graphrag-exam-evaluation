# Application
API_HOST=0.0.0.0
API_PORT=8083
LOG_LEVEL=info
DEBUG=true

# Neo4j Database (use port 7688 when running via docker-compose.neo4j.yml)
NEO4J_URI=bolt://localhost:7688
NEO4J_USER=neo4j
NEO4J_PASSWORD=exam-secure-password-2024
NEO4J_DATABASE=neo4j

# OpenAI Configuration (using OpenAI platform directly)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.2
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# CORS
CORS_ORIGINS=http://localhost:3004,http://localhost:3000

# LangSmith Tracing (for LangChain observability)
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your-langsmith-api-key-here
LANGSMITH_PROJECT=graphrag-exam-evaluation

# Exam Settings
GRADE_LEVEL=6
PASSING_SCORE=50.0
MAX_POINTS_PER_QUESTION=20
SHOW_STEP_BY_STEP=true
